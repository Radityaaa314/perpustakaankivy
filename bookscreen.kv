<BookScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(15)
        canvas.before:
            Color:
                rgba: (0.95, 0.92, 0.85, 1)  # Background color
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            size_hint_y: None
            height: dp(80)
            padding: dp(15)
            spacing: dp(10)
            canvas.before:
                Color:
                    rgba: (0.4, 0.26, 0.15, 1)  # Header color
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                text: "Selamat Datang Di Perpustakaan"
                font_size: '28sp'
                color: (1, 1, 1, 1)
                bold: True

        Label:
            text: "Berikut ini adalah daftar buku yang tersedia di perpustakaan kami"
            font_size: '20sp'
            color: (0.33, 0.22, 0.17, 1)
            size_hint_y: None
            height: dp(50)

        ScrollView:
            GridLayout:
                cols: 2
                size_hint_y: None
                height: self.minimum_height
                padding: dp(10)
                spacing: dp(15)

                # Buku 1
                AnchorLayout:
                    size_hint_y: None
                    height: dp(250)
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: None, None
                        height: dp(250)
                        width: dp(140)

                        Button:
                            size_hint: (None, None)
                            size: dp(120), dp(200)
                            background_normal: './assets/images/1.jpg'
                            on_release:
                                app.root.current = 'book1slide_screen'

                        Label:
                            text: "Tersedia: 3 Buku"
                            font_size: '16sp'
                            color: (0.33, 0.22, 0.17, 1)
                            halign: 'center'
                            valign: 'middle'

                # Buku 2
                AnchorLayout:
                    size_hint_y: None
                    height: dp(250)
