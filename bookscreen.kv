        # Tools di bagian bawah
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(100)
            spacing: dp(10)
            padding: dp(10)

            Button:
                text: "Riwayat"
                background_color: (0.6, 0.4, 0.2, 1)
                on_release: app.root.current = 'riwayat_screen'

            Button:
                text: "Profil"
                background_color: (0.6, 0.4, 0.2, 1)
                on_release: app.root.current = 'profil_screen'

            Button:
                text: "Pengembalian Buku"
                background_color: (0.6, 0.4, 0.2, 1)
                on_release: app.root.current = 'pengembalian_screen'

        Button:
            text: "Logout"
            size_hint_y: None
            height: dp(50)
            background_color: (0.8, 0.2, 0.2, 1)
            on_release: root.logout(self) 
