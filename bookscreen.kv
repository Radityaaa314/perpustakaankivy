                        width: dp(140)

                        Button:
                            size_hint: (None, None)
                            size: dp(120), dp(200)
                            background_normal: './assets/images/2.jpg'
                            on_release:
                                app.root.current = 'book2slide_screen'

                        Label:
                            text: "Tersedia: 2 Buku"
                            font_size: '16sp'
                            color: (0.33, 0.22, 0.17, 1)
                            halign: 'center'
                            valign: 'middle'

                # Buku 3
