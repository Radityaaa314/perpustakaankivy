<RiwayatScreen>:
    name: "riwayat_screen"
    
    BoxLayout:
        orientation: "vertical"
        padding: dp(10)
        spacing: dp(10)

        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'top'

            Button:
                text: "Kembali"
                size_hint: None, None
                size: dp(80), dp(40)
                on_release: root.go_back()

        Label:
            text: "Riwayat Peminjaman Buku"
            font_size: dp(24)
            size_hint_y: None
            height: dp(40)

        ScrollView:
            size_hint: (1, None)
            height: dp(300)
            
            BoxLayout:
                id: book_list
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
